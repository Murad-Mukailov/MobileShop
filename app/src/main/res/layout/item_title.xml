<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_item_title_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="@string/select_category"
        android:textColor="@color/home_item_title"
        android:textSize="@dimen/font_max"
        android:textStyle="bold" />

    <Space
        android:id="@+id/item_title_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/item_title_small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_gravity="center"
        android:text="@string/view_all"
        android:textColor="@color/home_item_title_small"
        android:textSize="@dimen/font_15" />

</androidx.appcompat.widget.LinearLayoutCompat>