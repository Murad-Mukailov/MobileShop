<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_item_category_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/phone_item_image"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="27dp"
        android:background="@color/home_item_category"
        android:scaleType="center"
        android:src="@drawable/ic_phone"
        app:shapeAppearance="@style/circle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/computer_item_image"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="23dp"
        android:background="@color/home_items_category_background"
        android:scaleType="center"
        android:src="@drawable/ic_computer"
        app:shapeAppearance="@style/circle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/health_item_image"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="23dp"
        android:background="@color/home_items_category_background"
        android:scaleType="center"
        android:src="@drawable/ic_health"
        app:shapeAppearance="@style/circle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/books_item_image"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="23dp"
        android:background="@color/home_items_category_background"
        android:scaleType="center"
        android:src="@drawable/ic_books"
        app:shapeAppearance="@style/circle"/>

</androidx.appcompat.widget.LinearLayoutCompat>